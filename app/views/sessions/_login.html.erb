<div class="options_head">
	Sign In
</div>
<div class="options_text">
<% form_tag session_path do -%>
<table border="0">
  <tr>
	<td>Login</td>
	<td><%= text_field_tag 'login' %></td>
  </tr>
  <tr>
	<td>Password</td>
	<td><%= password_field_tag 'password' %></td>
  </tr>
  <tr>
	<td>Remember Me?</td>
	<td><%= check_box_tag 'remember_me' %></td>
  </tr>
  <tr>
	<td colspan="2"><%= submit_tag 'Log in' %></td>
  </tr>
</table>
<% end -%>
</div>
